<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EV Charging Mobile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnOwnerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner Register"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnOperatorScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operator Scan"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDatabaseViewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Database"
        android:textSize="16sp" />

</LinearLayout>